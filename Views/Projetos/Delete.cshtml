@model TccAspNet.Models.Projeto

@{
    ViewData["Title"] = "Projeto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="container">
        <h1 class="mb-4 mt-5">Excluir</h1>
        <h3>Você tem certeza que deseja excluir este item?</h3>
        <div>
            <h4>Projeto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Imagem)
                </dt>
                <dd class="col-sm-10">
                    @*Add and img attribute to show it*@
                    @Html.DisplayFor(model => model.Imagem)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Filtro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Filtro)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-primary">Voltar à Listagem</a>
            </form>
        </div>
    </div>
</div>
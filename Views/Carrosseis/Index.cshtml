@model IEnumerable<TccAspNet.Models.Carrossel>

@{
    ViewData["Title"] = "Carrossel";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="container">
        <h1 class="mb-4 mt-5">Carrossel</h1>
        <p>
            <a asp-action="Create">Adicionar</a>
        </p>
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th scope="col">Imagem</th>
                        <th scope="col">Título (Menor)</th>
                        <th scope="col">Descrição (Maior)</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Imagem)</td>
                            <td>@Html.DisplayFor(modelItem => item.Texto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Alterar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>